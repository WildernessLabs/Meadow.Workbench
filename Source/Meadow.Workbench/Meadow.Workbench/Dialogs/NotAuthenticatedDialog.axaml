<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Meadow.Workbench.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Meadow.Workbench.Dialogs.NotAuthenticatedDialog">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:NotAuthenticatedViewModel />
    </Design.DataContext>

    <StackPanel>
        <Label
            Content="To download firmware you must log in to your Wilderness Labs account. Click the button below to launch a browser to log in"
            />
        <Button
            Content="Launch Browser"
            Command="{Binding LoginCommand}"
            />
    </StackPanel>
</UserControl>
